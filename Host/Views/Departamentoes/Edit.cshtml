@model Dal.Departamento

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Departamentoes" asp-action="Edit" asp-route-id="@Model.IdDepartamento" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPais" />
            <input type="hidden" asp-for="IdDepartamento" />
            <div class="form-group">
                <label asp-for="NombreDepartamento" class="control-label"></label>
                <input asp-for="NombreDepartamento" class="form-control" />
                <span asp-validation-for="NombreDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoDepartamento" class="control-label"></label>
                <input asp-for="CodigoDepartamento" class="form-control" />
                <span asp-validation-for="CodigoDepartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
