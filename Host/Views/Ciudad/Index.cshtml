@model IEnumerable<Dal.Ciudad>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCiudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodigoCiudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCiudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoCiudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departamento.CodigoDepartamento)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { idPais=item.IdPais, idDepartamento = item.IdDepartamento, idCiudad = item.IdCiudad }) |
                @Html.ActionLink("Details", "Details", new { idPais = item.IdPais, idDepartamento = item.IdDepartamento, idCiudad = item.IdCiudad }) |
                @Html.ActionLink("Delete", "Delete", new { id = item })
            </td>
        </tr>
}
    </tbody>
</table>
